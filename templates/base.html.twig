<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}


	</head>
	<body>

		<div class="container">
			{% include "nav.html.twig" %}

			{# MESSAGE #}
			{#<pre>{{ dump(app) }}</pre>#}

			{#     indice, valeur   in   super globale #}
				{% for type, messages in app.flashes %}
				{# app = super globale chez twig #}
					{% for msg in messages %}
						<div class="alert alert-{{ type }}"> {{msg|raw}}
					</div>
				{% endfor %}
			{% endfor %}
			<h1 class="text-info">Bienvenue Ã  la bibliotheque</h1>
			{% block body %}{% endblock %}
		</div>



		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
